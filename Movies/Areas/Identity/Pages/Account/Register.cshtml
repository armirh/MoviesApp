@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@
<section class="post-news-area section-padding-0-100">
    <div class="container"><hr />
        <div class="row justify-content-center">
            <!-- Post Details Content Area -->
            <div class="col-12 col-lg-8">
                <div class="post-a-comment-area mb-30 clearfix" id="reply">
                    <h4 class="mb-50">Register</h4>

                    <!-- Reply Form -->
                    <div class="contact-form-area">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.Fname" class="form-control" placeholder="First Name*">
                                    <span asp-validation-for="Input.Fname" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.LName" class="form-control" placeholder="Last Name*">
                                    <span asp-validation-for="Input.LName" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email*">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.Phone" class="form-control" placeholder="Phone*">
                                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.Password" class="form-control" placeholder="Password*">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password*">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <textarea asp-for="Input.Address" class="form-control" cols="30" rows="10" placeholder="Address"></textarea>
                                </div>
                                <div class="col-12">
                                    <button class="btn egames-btn w-100" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Widget -->

    </div>
    </div>
</section>
